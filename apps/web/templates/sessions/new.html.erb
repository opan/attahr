<div class="flex justify-center">
  <%=
    form_for :user, routes.sign_in_path, class: 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 w-1/3' do
      div class: 'mb-4' do
        label :email, class: 'block text-gray-700 text-sm font-bold mb-2'
        email_field :email, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
      end

      div class: 'mb-4' do
        label :password, class: 'block text-gray-700 text-sm font-bold mb-2'
        password_field :password, class: 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'
      end

      div class: 'flex items-center justify-between mb-4' do
        submit 'Sign In', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline'
      end

      div do
        link_to "Don't have account? Create one from here!" , routes.sign_up_path, class: 'block text-blue-500 text-sm mb-2 hover:text-blue-300'
      end
    end
  %>

</div>


<% unless flash[:errors].nil? %>
  <%= flash[:errors].join(', ') %>
<% end %>

