<%# form_for :product, routes.product_path(product.id), method: :patch, values: { product: product } do %>
<%= form_for :product, path, opts do
  div class: 'grid grid-cols-1 gap-5' do
    div class: 'max-w-lg' do
      label :name, class: 'text-gray-700'
      text_field :name, class: 'form-input w-full border-2 rounded-md mt-2 h-10 p-2'
    end

    div class: 'max-w-lg' do
      label :product_category_id, class: 'text-gray-700' do
        'Product Category'
      end
      select :product_category_id, product_categories.map { |pc| [pc.name, pc.id] }.to_h, class: 'form-input w-full border-2 rounded-md mt-2 h-10 p-2'
    end
    
    div class: 'max-w-lg' do
      label :sku, class: 'text-gray-700'
      text_field :sku, class: 'form-input w-full border-2 rounded-md mt-2 h-10 p-2', placeholder: 'When empty, SKU will be generated randomly'
    end

    div class: 'max-w-lg' do
      label :price, class: 'text-gray-700'
      text_field :price, class: 'form-input w-full border-2 rounded-md mt-2 h-10 p-2'
    end

    div do
      submit 'Submit', class: 'bg-blue-500 hover:bg-blue-600 text-white rounded py-2 px-4 border border-black border-opacity-25'
    end
  end
end %>  