<h1 class="tracking-tight text-2xl text-blue-500 font-semibold">New POS Session</h1>

<%= render partial: 'shared/alerts' %>

<div class="mt-5">
  <div class="p-5 border-2 border-gray-500 border-grey-200 rounded-md">
    <%= form_for :point_of_sale, Main.routes.point_of_sales_path, values: { point_of_sale: pos_session } do
      hidden_field :cashier_id
      hidden_field :session_id
      # TODO:
      # User should able to choose the org
      hidden_field :org_id, value: root_org.id

      div class: 'grid grid-cols-1 gap-5' do
        div class: 'max-w-lg' do
          label :session_id_tmp, class: 'text-gray-700' do
            'Session ID'
          end
          text_field :session_id_tmp, class: 'form-input w-full border-2 rounded-md mt-2 h-10 p-2', disabled: true, value: pos_session.session_id
        end

        div class: 'max-w-lg' do
          label :cashier_name, class: 'text-gray-700' do
            'Cashier Name'
          end
          text_field :cashier_name, class: 'form-input w-full border-2 rounded-md mt-2 h-10 p-2', disabled: true, value: current_user.profile.name
        end

        div class: 'max-w-lg' do
          label :password, class: 'text-gray-700'
          password_field :password, class: 'form-input w-full border-2 rounded-md mt-2 h-10 p-2', placeholder: 'Type your password account'
        end

        div do
          submit 'Create', class: 'bg-blue-500 hover:bg-blue-600 text-white rounded py-2 px-4 border border-black border-opacity-25'
        end
      end
    end %>  
  </div>  
</div>
